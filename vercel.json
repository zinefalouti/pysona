{
  "version": 2,
  "builds": [
    { "src": "manage.py", "use": "@vercel/python" },
    { "src": "static/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "manage.py" }
  ],
  "env": {
    "DJANGO_SECRET_KEY": "your-secret-key",
    "DJANGO_DEBUG": "false",
    "DATABASE_URL": "your-database-url"
  }
}
